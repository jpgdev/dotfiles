

##### COMMANDS

alias reload="source ~/.zshrc"
alias lsd="ls -d */"
alias ll="ls -l"
alias malias="$EDITOR $HOME/dotfiles/aliases"
alias open="xdg-open"

##### NAVIGATION SHORTCUTS

alias dbdir="cd /mnt/data/Dropbox"
alias docs="cd $HOME/Documents"
alias pj="cd $HOME/Projects"
alias pjl="cd $HOME/Projects & ls -l $HOME/Projects"


##### APPLICATIONS SHORTCUTS

alias archey="archey3"
alias atom="/usr/share/atom/atom"
alias mpad="mousepad"
alias tmux="tmux -2"
alias sublime="/opt/sublime-text/sublime_text"
alias sublime3="/opt/sublime_text_3/sublime_text"
